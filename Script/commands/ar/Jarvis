// jarvis.js
module.exports.config = {
  name: "jarvis",
  version: "1.0.0",
  hasPermission: 0,
  credits: "Bryce",
  description: "Replies only when someone says 'jarvis'",
  commandCategory: "general",
};

module.exports.run = async function ({ api, event }) {
  const text = event.body.toLowerCase();

  // ‡¶∂‡ßÅ‡¶ß‡ßÅ ‡¶§‡¶ñ‡¶® ‡¶â‡¶§‡ßç‡¶§‡¶∞ ‡¶¶‡ßá‡¶¨‡ßá, ‡¶Ø‡¶ñ‡¶® 'jarvis' ‡¶¨‡¶≤‡¶æ ‡¶π‡¶¨‡ßá
  if (text.includes("jarvis")) {
    const reply = `üëã ‡¶π‡ßç‡¶Ø‡¶æ‡¶≤‡ßã! ‡¶Ü‡¶Æ‡¶ø Jarvis ‚Äî ‡¶ï‡¶ø‡¶≠‡¶æ‡¶¨‡ßá ‡¶∏‡¶æ‡¶π‡¶æ‡¶Ø‡ßç‡¶Ø ‡¶ï‡¶∞‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡¶ø?`;
    return api.sendMessage(reply, event.threadID, event.messageID);
  }
};
